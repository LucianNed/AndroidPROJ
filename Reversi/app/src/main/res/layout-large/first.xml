<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:paddingTop="50dp">

        <Button
            android:id="@+id/first_help"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:elevation="10dp"
            android:gravity="center"
            android:onClick="clickHelp"
            android:text="@string/first_help"
            android:textSize="20sp"
            android:theme="@style/MyButton" />

        <Button
            android:id="@+id/first_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:elevation="10dp"
            android:gravity="center"
            android:onClick="clickStart"
            android:text="@string/first_start"
            android:textSize="20sp"
            android:theme="@style/MyButton" />

        <Button
            android:id="@+id/first_db"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:elevation="10dp"
            android:gravity="center"
            android:onClick="clickDB"
            android:text="@string/first_db"
            android:textSize="20sp"
            android:theme="@style/MyButton" />

        <Button
            android:id="@+id/first_exit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:elevation="10dp"
            android:gravity="center"
            android:onClick="clickExit"
            android:text="@string/exit"
            android:textSize="20sp"
            android:theme="@style/MyButton" />

    </LinearLayout>

</LinearLayout>