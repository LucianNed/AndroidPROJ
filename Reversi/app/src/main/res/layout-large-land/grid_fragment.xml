<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

        <LinearLayout
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_width="500dp">
            <GridView
                android:id="@+id/grid"
                android:layout_height="match_parent"
                android:stretchMode="spacingWidthUniform"
                android:gravity="center"
                android:layout_width="500dp">
            </GridView>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/game_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/game_title"
                android:layout_weight="1"
                android:textStyle="normal|bold"
                android:paddingBottom="10dp"
                android:paddingTop="5dp"
                android:textSize="18sp"
                android:paddingStart="10dp"
                android:gravity="start" />

            <TextView
                android:text="@string/game_s_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/game_s_left"
                android:layout_weight="1"
                android:paddingStart="5dp"
                android:textSize="18sp" />

            <TextView
                android:text="@string/game_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/game_time"
                android:layout_weight="1"
                android:textSize="18sp" />

            <TextView
                android:text="@string/game_turn"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/game_turn"
                android:layout_weight="1"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:paddingLeft="5dp"
                android:textStyle="normal|bold"
                android:textSize="18sp" />

                <TextView
                    android:text="@string/game_score_player"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/game_score_player"
                    android:layout_weight="4"
                    android:textSize="18sp"
                    android:textColor="@color/colorPLAYER"
                    android:paddingStart="5dp" />
                <TextView
                    android:text="@string/game_score_npc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/game_score_npc"
                    android:layout_weight="3.5"
                    android:textSize="18sp"
                    android:textColor="@color/colorNPC"
                    android:paddingStart="5dp" />
            </LinearLayout>

</LinearLayout>
